<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.taxi_info_main.TaxiInfoFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo_circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/hours"
            app:civ_border_color="@color/green"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/online_taxi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/img_logo_circle"
            app:layout_constraintStart_toEndOf="@id/img_logo_circle"
            app:layout_constraintTop_toTopOf="@id/img_logo_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu"
            app:civ_border_color="@color/green"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@id/img_logo_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_logo_circle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_name"
            android:layout_width="343dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/gray_for_cardview"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ava_taxi_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="12dp"
                android:text="@string/muhammad_mamasoliyev"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="35dp"
                android:text="@string/faol_holatda"
                android:textColor="@color/green"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_balans"
            android:layout_width="166dp"
            android:layout_height="72dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/gray_for_cardview"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="@id/card_name"
            app:layout_constraintTop_toBottomOf="@id/card_name">

            <TextView
                android:id="@+id/text_balans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/_200_000"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:text="@string/balans" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_bonus"
            android:layout_width="166dp"
            android:layout_height="72dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/gray_for_cardview"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/card_name"
            app:layout_constraintTop_toBottomOf="@id/card_name">

            <TextView
                android:id="@+id/text_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/_89"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:text="@string/bonus" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rejim"
            android:layout_width="343dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/gray_for_cardview"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/card_bonus"
            app:layout_constraintStart_toStartOf="@id/card_balans"
            app:layout_constraintTop_toBottomOf="@id/card_balans">

            <ImageView
                android:id="@+id/car_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:text="@string/shaharlararo_taksi_rejimi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon_next_cities"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_next" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/go_to_line_popup"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/green"
            android:text="@string/liniyaga_chiqish"
            android:textAllCaps="false"
            android:visibility="visible"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/card_rejim"
            app:layout_constraintStart_toStartOf="@id/card_rejim"
            app:layout_constraintTop_toBottomOf="@+id/card_rejim">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="89dp"
                android:src="@drawable/ic_car_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="18dp"
                android:text="@string/liniyaga_chiqish"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/go_to_line_popup_orange"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/orange"
            android:text="@string/liniyaga_chiqish"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/card_rejim"
            app:layout_constraintStart_toStartOf="@id/card_rejim"
            app:layout_constraintTop_toBottomOf="@+id/card_rejim">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="89dp"
                android:src="@drawable/ic_car_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="18dp"
                android:text="@string/liniyaga_chiqish"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_bg"
            app:itemIconTint="@drawable/bottom_nav_selector"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>