<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context=".presentation.pros_fragments.ChooseLanguageFragment">

        <ImageView
            android:id="@+id/img_hours"
            android:layout_width="188dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:src="@drawable/hours" />

        <Button
            android:id="@+id/btn_uzb_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_text_uzb"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_uzb_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="@string/btn_text_uzb"
            android:textColor="@color/green"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_rus_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_text_russ"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_rus_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="@string/btn_text_russ"
            android:textColor="@color/green"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_eng_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/green"
            android:text="@string/btn_text_eng"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_eng_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/white"
            android:text="@string/btn_text_eng"
            android:textColor="@color/green"
            android:visibility="visible" />

    </LinearLayout>
</layout>